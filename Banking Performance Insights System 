                         elif Currency == 'USD':
                              return 'United States Dollar'
                         elif Currency == 'INR':
                              return 'Indian Rupee'
                         elif Currency == 'EUR':
                              return 'Euro'
                         elif Currency == 'JPY':
                              return 'Japanese Yen'
                         else:
                              return 'Unknown Currency'  

                    
